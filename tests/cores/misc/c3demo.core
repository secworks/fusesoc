[main]

simulators = icarus
backend = icestorm

depend = paramtest

[fileset rtl_files]
files =
 c3demo.v
 ledpanel.v[is_include_file]
 picorv32.v
file_type = verilogSource

[fileset tb_files]
files =
 firmware.hex[is_include_file]
 $YOSYS_DAT_DIR/ice40/cells_sim.v
 testbench.v
file_type = verilogSource
usage = sim

[simulator]
toplevel = testbench

[parameter firmware_file]
datatype = file
description = "Firmware"
paramtype = vlogparam
scope = private

[scripts]
pre_synth_scripts = scripts/pre_build_script
post_impl_scripts = scripts/post_build_script

[icestorm]
arachne_pnr_options = -s 1 -d 8k
pcf_file = c3demo.pcf
top_module = c3demo
